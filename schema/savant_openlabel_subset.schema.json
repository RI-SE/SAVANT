{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpenLabel SAVANT Subset",
  "type": "object",
  "properties": {
    "openlabel": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object",
          "properties": {
            "schema_version": { "type": "string", "const" : "1.1" },
            "tagged_file": { "type": "string" },
            "annotator": { "type": "string" }
          },
          "required": ["schema_version", "tagged_file", "annotator"]
        },
        "ontologies": {
          "type": "object",
          "patternProperties": {
            "^[0-9]+$": { "type": "string", "format": "uri" }
          }
        },
        "objects": {
          "type": "object",
          "patternProperties": {
            "^[0-9]+$": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" },
                "ontology_uid": { "type": "string" },
                "frame_intervals": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "frame_start": { "type": "integer" },
                      "frame_end": { "type": "integer" }
                    },
                    "required": ["frame_start", "frame_end"]
                  }
                },
                "object_data": {
                  "type": "object",
                  "properties": {
                    "vec": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string" },
                          "val": {
                            "oneOf": [
                              { "type": "string" },
                              { "type": "array", "items": { "type": "string" } }
                            ]
                          }
                        },
                        "required": ["name", "val"]
                      }
                    }
                  }
                }
              },
              "required": ["name", "type", "ontology_uid"]
            }
          }
        },
        "actions": {
          "type": "object",
          "patternProperties": {
            "^[0-9]+$": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" },
                "ontology_uid": { "type": "string" },
                "frame_intervals": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "frame_start": { "type": "integer" },
                      "frame_end": { "type": "integer" }
                    },
                    "required": ["frame_start", "frame_end"]
                  }
                }
              },
              "required": ["name", "type", "ontology_uid"]
            }
          }
        },
        "relations": {
          "type": "object",
          "patternProperties": {
            "^[0-9]+$": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" },
                "ontology_uid": { "type": "string" },
                "frame_intervals": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "frame_start": { "type": "integer" },
                      "frame_end": { "type": "integer" }
                    },
                    "required": ["frame_start", "frame_end"]
                  }
                },
                "rdf_subjects": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": ["object", "action", "event", "context"]
                      },
                      "uid": { "type": "string" }
                    },
                    "required": ["type", "uid"]
                  }
                },
                "rdf_objects": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": ["object", "action", "event", "context"]
                      },
                      "uid": { "type": "string" }
                    },
                    "required": ["type", "uid"]
                  }
                }
              },
              "required": ["name", "type", "ontology_uid", "rdf_subjects", "rdf_objects"]
            }
          }
        },
        "contexts": {
          "type": "object",
          "description": "Nonspatial/temporal annotations for scene context (weather, road type, etc.)",
          "patternProperties": {
            "^[0-9]+$": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" },
                "ontology_uid": { "type": "string" },
                "frame_intervals": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "frame_start": { "type": "integer" },
                      "frame_end": { "type": "integer" }
                    },
                    "required": ["frame_start", "frame_end"]
                  }
                },
                "context_data": {
                  "type": "object",
                  "properties": {
                    "boolean": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string" },
                          "val": { "type": "boolean" }
                        },
                        "required": ["name", "val"]
                      }
                    },
                    "num": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string" },
                          "val": { "type": "number" }
                        },
                        "required": ["name", "val"]
                      }
                    },
                    "text": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string" },
                          "val": { "type": "string" }
                        },
                        "required": ["name", "val"]
                      }
                    },
                    "vec": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string" },
                          "val": {
                            "type": "array",
                            "items": { "type": ["number", "string"] }
                          }
                        },
                        "required": ["name", "val"]
                      }
                    }
                  }
                }
              },
              "required": ["name", "type"]
            }
          }
        },
        "tags": {
          "type": "object",
          "description": "Scenario-level metadata tags",
          "patternProperties": {
            "^[0-9]+$": {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "ontology_uid": { "type": "string" },
                "tag_data": {
                  "oneOf": [
                    {
                      "type": "object",
                      "properties": {
                        "boolean": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "name": { "type": "string" },
                              "val": { "type": "boolean" }
                            },
                            "required": ["name", "val"]
                          }
                        },
                        "num": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "name": { "type": "string" },
                              "val": { "type": "number" }
                            },
                            "required": ["name", "val"]
                          }
                        },
                        "text": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "name": { "type": "string" },
                              "val": { "type": "string" }
                            },
                            "required": ["name", "val"]
                          }
                        },
                        "vec": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "name": { "type": "string" },
                              "val": {
                                "type": "array",
                                "items": { "type": ["number", "string"] }
                              }
                            },
                            "required": ["name", "val"]
                          }
                        }
                      }
                    },
                    { "type": "string" }
                  ]
                }
              },
              "required": ["type"]
            }
          }
        },
        "frames": {
          "type": "object",
          "patternProperties": {
            "^[0-9]+$": {
              "type": "object",
              "properties": {
                "objects": {
                  "type": "object",
                  "patternProperties": {
                    "^[0-9]+$": {
                      "type": "object",
                      "properties": {
                        "object_data": {
                          "type": "object",
                          "properties": {
                            "rbbox": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "name": { "type": "string" },
                                  "val": {
                                    "type": "array",
                                    "items": { "type": ["number", "string"] }
                                  }
                                },
                                "required": ["name", "val"]
                              }
                            },
                            "vec": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "name": { "type": "string" },
                                  "val": {
                                    "type": "array",
                                    "items": { "type": ["number", "string"] }
                                  }
                                },
                                "required": ["name", "val"]
                              }
                            }
                          },
                          "required": ["rbbox", "vec"]
                        }
                      },
                      "required": ["object_data"]
                    }
                  }
                }
              },
              "required": ["objects"]
            }
          }
        }
      },
      "required": ["metadata", "ontologies", "objects", "actions", "relations", "frames"]
    }
  },
  "required": ["openlabel"]
}